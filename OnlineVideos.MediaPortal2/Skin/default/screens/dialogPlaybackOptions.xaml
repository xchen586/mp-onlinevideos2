<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\simple_dialog_menu.xaml"
    >
    <Include.Resources>

        <!-- DataContext -->
        <Model x:Key="OnlineVideosModel" Id="C418243F-5BD3-4637-8871-DA6545387929"/>

        <!-- Header -->
		<ResourceWrapper x:Key="Dialog_Header_Text" EnableBindings="True" Resource="{Binding Source={StaticResource OnlineVideosModel}, Path=SelectedVideo.Title}"/>

        <!-- Menu -->
        <ResourceWrapper x:Key="Menu_Items" EnableBindings="True">
            <Binding Source="{StaticResource OnlineVideosModel}" Path="PlaybackOptions" Mode="OneTime"/>
        </ResourceWrapper>

        <!-- Command -->
        <CommandStencil x:Key="Execute_Command_Stencil" Source="{StaticResource OnlineVideosModel}" Path="SelectPlaybackOption"/>

    </Include.Resources>
</Include>