<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_dialog_bare.xaml"
    >
	<Include.Resources>

		<!-- Header -->
		<ResourceWrapper x:Key="Dialog_Header_Text" EnableBindings="True" 
						 Resource="{Binding Source={Service ScreenManager}, Path=FocusedScreen.FocusedElement.VisualParent.Context[Name], Mode=OneTime}"/>

		<!-- Contents -->
		<ControlTemplate x:Key="Contents_Template">
			<ListView x:Name="DialogMenu" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SetFocusPrio="DefaultHigh"
						Style="{ThemeResource MenuListViewStyle}" 
						ItemsSource="{Binding Source={Service ScreenManager}, Path=FocusedScreen.FocusedElement.VisualParent.Context.ContextMenuEntries}">
				<ListView.Resources>
					<CommandBridge x:Key="Menu_Command" Command="{Binding Path=Command, Mode=OneTime}"/>
				</ListView.Resources>
			</ListView>
		</ControlTemplate>
		
	</Include.Resources>
</Include>