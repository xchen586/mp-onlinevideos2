<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>4757</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <controls>
    
    <!-- *** WINDOW DEFAULTS *** -->

    <control>
      <description>BG</description>
      <type>image</type>
      <width>720</width>
      <height>576</height>
    </control>
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <type>image</type>
      <id>1</id>
      <posX>60</posX>
      <posY>10</posY>
      <width>162</width>
      <height>54</height>
      <texture>#OnlineVideos.HeaderImage</texture>
    </control>
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <type>label</type>
      <id>1</id>
      <posX>220</posX>
      <posY>25</posY>
      <width>400</width>
      <label>#OnlineVideos.HeaderLabel</label>
      <font>font16</font>      
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>    
    <control>
      <description>Date</description>
      <type>label</type>
      <id>0</id>
      <posX>670</posX>
      <posY>10</posY>
      <label>#date</label>
      <align>right</align>
      <font>font14</font>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Time</description>
      <type>label</type>
      <id>0</id>
      <posX>670</posX>
      <posY>28</posY>
      <label>#time</label>
      <align>right</align>
      <font>font14</font>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>    
    
    <control>
      <description>listcontrol</description>
      <type>listcontrol</type>
      <id>50</id>
      <posX>50</posX>
      <width>620</width>
      <posY>70</posY>
      <height>400</height>
      <spinPosX>660</spinPosX>
      <spinPoxY>565</spinPoxY>    
      <scrollOffset>2</scrollOffset>
      <textXOff3>400</textXOff3>
      <PinIconXOff>12</PinIconXOff>
      <PinIconYOff>4</PinIconYOff>
      <IconXOff>50</IconXOff>
      <textXOff>60</textXOff>
      <onleft>508</onleft>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="slide" time="150" start="0,-300">WindowOpen</animation>
      <animation effect="slide" time="250" end="800,0">WindowClose</animation>
      <animation effect="zoom" time="250" end="65" center="0,0">unfocus</animation>
      <animation effect="slide" time="250" end="170,0">unfocus</animation>
      <animation effect="zoom" time="250" start="65" center="0,0">focus</animation>
      <animation effect="slide" time="250" start="170,0">focus</animation>
    </control>

    <control>
      <description>video rectangle</description>
      <type>image</type>
      <id>0</id>
      <posX>43</posX>
      <posY>446</posY>
      <width>122</width>
      <height>92</height>
      <texture>Picture_cover.png</texture>
      <visible>!Control.IsVisible(51)</visible>
    </control>
    <control>
      <id>500</id>
      <type>image</type>
      <posX>45</posX>
      <posY>447</posY>
      <width>118</width>
      <height>89</height>
      <centered>yes</centered>
      <texture diffuse="Thumb_Mask.png">#selectedthumb</texture>
      <keepaspectratio>yes</keepaspectratio>
      <visible>!videoplayer.usingoverlays + !player.hasmedia + !Control.IsVisible(51)</visible>
      <animation effect="fade" time="250" reversible="false">visible</animation>
    </control>  
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>210</posX>
      <posY>425</posY>
      <width>460</width>
      <label>#selecteditem</label>
      <font>font14</font>
      <textcolor>White</textcolor>
      <visible>!Control.IsVisible(51)</visible>
    </control>
    <control>
      <description>Owner Label</description>
      <type>label</type>
      <posX>210</posX>
      <posY>445</posY>
      <width>80</width>
      <font>font12</font>
      <label>#OnlineVideos.Translation.Creator.Label</label>
      <textcolor>ffa9d0f7</textcolor>
      <visible>control.hastext(501)</visible>
    </control>
    <control>
      <description>Owner</description>
      <type>label</type>
      <id>501</id>
      <posX>290</posX>
      <posY>445</posY>
      <width>370</width>
      <font>font12</font>
      <label>#OnlineVideos.owner</label>
      <textcolor>ffa9d0f7</textcolor>
    </control>
    <control>
      <description>Description</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>210</posX>
      <posY>460</posY>
      <width>440</width>
      <height>116</height>
      <colordiffuse>ffffffff</colordiffuse>      
      <label>#OnlineVideos.desc</label>
      <textcolor>White</textcolor>
      <visible>!Control.IsVisible(51)</visible>
    </control>
    <control>
      <description>Number of Items Label</description>
      <type>label</type>
      <id>0</id>
      <posX>660</posX>
      <posY>445</posY>
      <label>#selectedindex/#itemcount #itemtype</label>
      <align>right</align>
      <textcolor>White</textcolor>
      <font>font10</font>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
      
    <!-- *** HIDDEN MENU *** -->
    
    <control>
      <type>image</type>
      <texture>Action_nofocus.png</texture>        
      <visible>Control.HasFocus(50)</visible>      
      <animation effect="fade" time="0" delay="300">visible</animation>
    </control>      
    <control>
      <type>image</type>
      <posX>15</posX>
      <posY>63</posY>
      <width>255</width>
      <height>356</height>
      <texture>Backslide.png</texture>      
      <visible>!Control.HasFocus(50)</visible>
      <animation effect="slide" time="250" start="-300,0">visible</animation>
      <animation effect="slide" time="250" end="-300,0">hidden</animation>
    </control>
    <control>
      <description>button group</description>
      <type>group</type>        
      <posX>40</posX>
      <posY>80</posY>
      <layout>StackLayout</layout>
      <visible>!Control.HasFocus(50)</visible>
      <animation effect="slide" time="250" start="-300,0">visible</animation>
      <animation effect="slide" time="250" end="-300,0">hidden</animation>          
      <control>
        <type>selectbutton</type>          
        <description>filter button</description>
        <id>503</id>
        <width>180</width>
        <onright>50</onright>
        <onup>17</onup>
        <label>#OnlineVideos.Translation.Filter.Label: #OnlineVideos.Translation.State.Label</label>
        <textYOff>3</textYOff>
        <visible>!Control.HasFocus(50)</visible>
      </control>
      <control>
        <type>selectbutton</type>
        <description>filter button for Creator</description>
        <id>506</id>
        <width>180</width>
        <onright>50</onright>
        <onup>503</onup>
        <label>#OnlineVideos.Translation.Filter.Label: #OnlineVideos.Translation.Creator.Label</label>        
        <textYOff>3</textYOff>
        <visible>!Control.HasFocus(50)</visible>
      </control>
      <control>
        <type>selectbutton</type>
        <description>filter button for Language</description>
        <id>507</id>
        <width>180</width>
        <onright>50</onright>
        <onup>506</onup>
        <label>#OnlineVideos.Translation.Filter.Label: #OnlineVideos.Translation.Language.Label</label>
        <textYOff>3</textYOff>
        <visible>!Control.HasFocus(50)</visible>
      </control>
      <control>
        <type>selectbutton</type>
        <description>Order By</description>
        <id>504</id>
        <width>180</width>
        <onright>50</onright>
        <onup>507</onup>
        <ondown>508</ondown>
        <label>#OnlineVideos.Translation.SortOptions.Label</label>
        <textYOff>3</textYOff>
        <visible>!Control.HasFocus(50)</visible>
      </control>   
      <control>
        <type>button</type>
        <description>automatic update button</description>
        <id>508</id>
        <width>180</width>
        <onright>50</onright>
        <onup>504</onup>          
        <ondown>50</ondown>
        <label>#OnlineVideos.Translation.AutomaticUpdate.Label</label>
        <textYOff>3</textYOff>
        <visible allowhiddenfocus="true">!Control.HasFocus(50)</visible>
      </control>
    </control>    
    
  </controls>
</window>