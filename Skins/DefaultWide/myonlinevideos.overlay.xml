<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
  
	<control>
      <description>video preview window</description>
      <type>videowindow</type>
      <id>99</id>
      <posX>86</posX>
      <posY>558</posY>
      <width>203</width>
      <height>115</height>
	  <visible>player.HasVideo</visible>
      <action>18</action>
      <textureFocus>tv_green_border.png</textureFocus>
    </control>
	
	<control>
      <description>Site Icon</description>
      <type>image</type>
      <id>0</id>
      <posX>36</posX>
      <posY>558</posY>
      <width>40</width>
      <height>40</height>
      <texture>#Play.Current.OnlineVideos.SiteIcon</texture>
	  <visible>player.HasVideo</visible>
    </control>
	
    <control>
      <description>Pause logo</description>
      <type>image</type>
      <id>0</id>
      <posX>46</posX>
      <posY>605</posY>
      <width>18</width>
      <height>26</height>
	  <valign>top</valign>
	  <align>left</align>
	  <tileFill>true</tileFill>
	  <keepaspectratio>false</keepaspectratio>
	  <zoom>false</zoom>
      <texture>video-pause.png</texture>
      <visible>player.HasVideo + player.paused</visible>
    </control>
	
	<control>
      <description>play time label</description>
      <type>label</type>
      <id>0</id>
      <posX>75</posX>
      <posY>650</posY>
	  <width>65</width>
      <label>#currentplaytime</label>
      <align>right</align>
      <font>font11</font>
      <textcolor>ivory</textcolor>
	  <visible>player.HasVideo</visible>
    </control>
	
	<control>
      <description>scrolling info label Video</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>20</posX>
      <posY>677</posY>
      <width>280</width>
      <font>font11</font>
      <textcolor>ivory</textcolor>
      <label>#Play.Current.Title</label>
      <wrapString> :.:  </wrapString>
	  <visible>player.HasVideo</visible>
    </control>

  </controls>
</window>