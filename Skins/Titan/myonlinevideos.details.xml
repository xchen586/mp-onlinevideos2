			<posY>346</posY>
			<width>429</width>
			<height>613</height>
			<texture>list_poster_shadow.png</texture>
			<visible>string.equals(#OnlineVideos.state, details)</visible>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control>
			<description>Cover Art</description>
			<type>image</type>
			<id>0</id>
			<posX>123</posX>
			<posY>360</posY>
			<width>379</width>
			<height>563</height>
			<texture>#OnlineVideos.Details.Poster</texture>
			<visible>string.equals(#OnlineVideos.state, details)</visible>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>


		<!--            :: LIST ::           	 -->

		<!--            :: Listview Lines ::            -->

		<control>
			<description>List Lines</description>
			<type>image</type>
			<id>1</id>
			<posX>1222</posX>
			<posY>385</posY>
			<width>607</width>
			<height>506</height>
			<texture>list_lines.png</texture>
			<visible>string.equals(#OnlineVideos.state, details)</visible>  
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control>
			<description>Movie List</description>
			<type>listcontrol</type>
			<id>51</id>
			<onleft>97258</onleft>
			<onright>97258</onright>
			<scrollOffset>1</scrollOffset>
			<posX>1165</posX>
			<posY>331</posY>
			<height>700</height>
			<width>698</width>
			<textXOff>44</textXOff>
			<textXOff2>650</textXOff2>
			<textureHeight>54</textureHeight>
			<textureFocus>listcontrol_item_selected.png</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<dimColor>ffffffff</dimColor>
			<spinPosX>1828</spinPosX>
			<spinPosY>1000</spinPosY>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<visible>string.equals(#OnlineVideos.state, details)</visible>        
		</control>

		<!--            :: INFOS ::           	 -->

		<control Style="InfoLabel">
			<description>Buffering Label in details view</description>
			<type>label</type>
			<id>0</id>
			<posX>123</posX>
			<posY>935</posY>
			<label>#OnlineVideos.Translation.Buffered.Label</label>
			<visible>string.equals(#OnlineVideos.IsBuffering, true) + string.equals(#OnlineVideos.state,details)</visible>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control Style="InfoValueSmall">
			<description>Buffering Percent in details view</description>
			<type>label</type>
			<id>0</id>
			<posX>502</posX>
			<posY>935</posY>
			<align>right</align>
			<label>#OnlineVideos.buffered%</label>
			<visible>string.equals(#OnlineVideos.IsBuffering, true) + string.equals(#OnlineVideos.state,details)</visible>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control style="SettingsButton">
			<description>Add to Trakt Movie Watch List</description>
			<type>button</type>
			<id>97258</id>
			<label>#Trakt.Translation.AddToWatchList.Label</label>
			<onup>51</onup>
			<ondown>51</ondown>
			<onright>51</onright>
			<onleft>51</onleft>
			<posX>580</posX>
			<posY>927</posY>
			<width>485</width>
			<textalign>left</textalign>
			<textvalign>middle</textvalign>
			<scrollStartDelaySec>1</scrollStartDelaySec>
			<scrollWrapString>|</scrollWrapString>
			<visible>string.equals(#OnlineVideos.state,details)+[string.equals(#OnlineVideos.selectedSiteUtil,IMDB)|string.equals(#OnlineVideos.selectedSiteUtil,ITMovieTrailers)]+plugin.isenabled(Trakt)</visible>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

	</controls>
</window>